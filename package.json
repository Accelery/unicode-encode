{
  "name": "unicode-encode",
  "version": "1.4.2",
  "description": "Easy base64 encode and decode of Unicode strings and Emojis.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "npm run build && mocha dist/test/**/*.test.js",
    "test:ts": "mocha -r ts-node/register test/**/*.test.ts",
    "test:watch": "mocha -r ts-node/register test/**/*.test.ts --watch",
    "coverage": "nyc npm run test",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run rebuild && npm run test",
    "prepack": "npm run build"
  },
  "engines": {
    "node": "22"
  },
  "keywords": [
    "atob",
    "btoa",
    "unicode",
    "encode",
    "emoji",
    "decode",
    "base64"
  ],
  "author": "Accelery <team@accelery.be>",
  "repository": {
    "type": "git",
    "url": "https://github.com/accelery/unicode-encode"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.14",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
